.container
  = form_for @user do |f|
    .row
      .col-md-3
      .col-md-6
        %h2 Sign Up
        %hr

    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.label :name
          = f.text_field :name, class: "form-control"

    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.label :email
          = f.text_field :email, class: "form-control"

    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.label :password
          = f.password_field :password, class: "form-control"

    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation, class: "form-control"

    .row
      .col-md-3
      .col-md-6
        .form-group
          = f.submit "Sign Up", class: "btn btn-success" do
            %i.fa.fa-sign-in
