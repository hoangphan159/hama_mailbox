.container
  = form_tag(sessions_path) do
    .row
      .col-md-3
      .col-md-6
        %h2 Login
        %hr

    .row
      .col-md-3
      .col-md-6
        .form-group
          = label_tag :email
          = text_field_tag :email, params[:email], class: "form-control"

    .row
      .col-md-3
      .col-md-6
        .form-group
          = label_tag :password
          = password_field_tag :password, nil, class: "form-control"

    .row
      .col-md-3
      .col-md-6
        .form-group
          = submit_tag "Login",class: "btn btn-success"
